@inherits LayoutComponentBase
@inject IStringLocalizer<english> _enlocalizer
@inject IStringLocalizer<czech> _czlocalizer

<main>
   <nav class="navbar navbar-expand-lg">
        <a class="navbar-brand" href="#"><img src="favicon.png" alt="logo"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="#">@GetLocalizedString("Domov")</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="vybaveni">@GetLocalizedString("Vybavení")</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="revize/ahoj">@GetLocalizedString("Revize")</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="https://www.fbmi.cvut.cz/">FBMI</a>
                </li>
                <li class="nav-item">
                    <button @onclick="SwitchToEnglish">en</button>
                </li>
                <li class="nav-item">
                    <button @onclick="SwitchToCzech">cz</button>
                </li>
            </ul>
        </div>
    </nav>
@Body 
        
</main>

@code {
    public IStringLocalizer _currentLocalizer;
    protected override void OnInitialized()
    {
        _currentLocalizer = _czlocalizer;
    }

    private void SwitchToEnglish()
    {
        _currentLocalizer = _enlocalizer;
        StateHasChanged();
    }

    private void SwitchToCzech()
    {
        _currentLocalizer = _czlocalizer;
        StateHasChanged();
    }

    private LocalizedString GetLocalizedString(string key)
    {
        return _currentLocalizer[key];
    }
}
